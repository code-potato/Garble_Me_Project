<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepotato.view.AboutScr">

    <TextView android:text="@string/about" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="32dp"
              android:id="@+id/textView" android:background="#faf8ff" android:textColor="#2315ff"
              android:textStyle="bold" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/the_team"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:inputType="none"
            android:textColor="#1f07ff"
            android:autoText="false" android:gravity="center_horizontal"
            android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginTop="41dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/purpose"
            android:id="@+id/textView3"
            android:textColor="#1f07ff"
            android:inputType="none" android:gravity="center"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginBottom="171dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/license"
            android:id="@+id/textView4"
            android:layout_below="@+id/editText2" android:layout_alignParentEnd="true" android:layout_marginTop="38dp"
            android:gravity="center_horizontal" android:textColor="#1f07ff"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_above="@+id/textView4" android:layout_alignStart="@+id/editText"/>

</RelativeLayout>
