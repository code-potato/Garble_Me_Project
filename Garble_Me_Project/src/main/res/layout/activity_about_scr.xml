<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             tools:context="com.codepotato.view.AboutScr">

    <TextView android:text="@string/about" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="32dp"
              android:id="@+id/about" android:background="#faf8ff" android:textColor="#2315ff"
              android:textStyle="bold" android:layout_alignParentTop="true"
              android:editable="false"
              android:gravity="center"/>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team"
                android:text="@string/team"
                android:textColor="#1f07ff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="top"
                android:layout_below="@+id/about"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purpose"
                android:text="@string/purpose"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1f07ff"
                android:editable="false"
                android:scrollHorizontally="false"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/licenses"
                android:text="@string/licenses"
                android:gravity="bottom" android:textColor="#1f07ff"
                android:editable="false"/>
    </TableRow>

</TableLayout>
