<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.codepotato.view.EffectSettingsScr">


    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentTop="true" android:layout_alignStart="@+id/seekBar2"
            android:layout_marginTop="88dp"/>
    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:layout_below="@+id/seekBar" android:layout_alignParentEnd="true" android:layout_marginTop="48dp"
            android:layout_toRightOf="@+id/editText3"/>
    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:layout_below="@+id/seekBar2" android:layout_alignStart="@+id/seekBar2"
            android:layout_marginTop="76dp"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar4" android:layout_alignTop="@+id/editText4"
            android:layout_alignBottom="@+id/editText4" android:layout_alignStart="@+id/seekBar3"
            android:layout_alignEnd="@+id/seekBar3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Dry"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/seekBar" android:layout_alignTop="@+id/seekBar"
            android:layout_alignEnd="@+id/editText2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="Wet"
            android:layout_alignBottom="@+id/seekBar2" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:text="FeedBack"
            android:layout_alignBottom="@+id/seekBar3" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:text="Delays"
            android:layout_below="@+id/seekBar3" android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown" android:textAlignment="center"
            android:gravity="top" android:layout_alignStart="@+id/seekBar"/>

</RelativeLayout>
