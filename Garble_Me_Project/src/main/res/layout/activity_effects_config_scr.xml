<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.codepotato.view.EffectsConfigScr">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" android:gravity="top"
            android:background="@drawable/add_button" android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/playButton"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export"
            android:id="@+id/exportButton" android:gravity="top" android:layout_alignBottom="@+id/addButton"
            android:layout_toRightOf="@+id/playButton" android:layout_alignParentTop="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effect"
            android:id="@+id/effectButton" android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="69dp"
            android:layout_below="@+id/exportButton" android:layout_alignStart="@+id/addButton"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/removeButton"
            android:layout_alignTop="@+id/effectButton" android:layout_alignEnd="@+id/exportButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="myaudiofile.wav"
            android:id="@+id/filenameText"
            android:layout_above="@+id/seekBar" android:layout_centerHorizontal="true"
            android:layout_marginBottom="63dp"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_above="@+id/playButton" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restartButton"
            android:gravity="bottom" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:onClick="togglePlaying" android:textOff=" " android:textOn=" "
            android:background="@drawable/play_button"
            android:checked="false" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:gravity="bottom"/>

</RelativeLayout>
