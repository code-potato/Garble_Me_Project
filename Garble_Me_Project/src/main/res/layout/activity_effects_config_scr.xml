<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepotato.view.EffectsConfigScr">

    <TextView
        android:text="EffectsConfig!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/button"
            android:layout_alignTop="@+id/button2" android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="61dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button2"
            android:layout_marginRight="70dp"
            android:layout_marginTop="52dp" android:layout_below="@+id/textView" android:layout_alignParentEnd="true"/>
    <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_marginBottom="76dp"
            android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/imageView"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button3" android:layout_below="@+id/button2" android:layout_alignEnd="@+id/button2"
            android:layout_marginTop="54dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effect1"
            android:id="@+id/button4"
            android:layout_alignTop="@+id/button3" android:layout_alignStart="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effect2"
            android:id="@+id/button5"
            android:layout_marginTop="29dp" android:layout_below="@+id/button4"
            android:layout_alignStart="@+id/button4"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button6" android:layout_alignTop="@+id/button5" android:layout_alignEnd="@+id/button3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="myaudiofile.wav"
            android:id="@+id/textView2"
            android:layout_above="@+id/progressBar" android:layout_centerHorizontal="true"/>

</RelativeLayout>
