<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.codepotato.view.RecordingLibraScr">

    <TextView
            android:text="Recording Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="32dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:id="@+id/textView"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button"
            android:layout_marginTop="39dp" android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/textView"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button5" android:layout_alignStart="@+id/button"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button3"
            android:layout_alignTop="@+id/button6" android:layout_alignStart="@+id/button2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filename1"
            android:id="@+id/button4"
            android:layout_alignStart="@+id/textView"
            android:layout_alignBottom="@+id/button" android:layout_toLeftOf="@+id/button"
            android:background="@drawable/filename_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filename2"
            android:id="@+id/button5"
            android:layout_marginTop="37dp" android:layout_below="@+id/button4"
            android:layout_alignStart="@+id/button4" android:layout_alignEnd="@+id/button4"
            android:background="@drawable/filename_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filename3"
            android:id="@+id/button6"
            android:layout_below="@+id/button5" android:layout_alignStart="@+id/button5"
            android:layout_marginTop="46dp" android:layout_alignEnd="@+id/button5"
            android:background="@drawable/filename_button"/>

</RelativeLayout>
